<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <EditText
        android:id="@+id/cuenta_identificador"
        android:layout_width="500dp"
        android:layout_height="58dp"
        android:background="@drawable/text_box_background"
        android:hint="@string/hint_account"
        android:padding="10dp"
        android:textSize="25sp"
        android:textColorHint="@color/grey_medium"
        android:textCursorDrawable="@drawable/text_cursor_color" />

    <Switch
        android:id="@+id/BtnSwitch"
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:background="@drawable/focus"
        android:checked="true"
        android:focusable="true"
        android:padding="10dp"
        android:splitTrack="true"
        android:text="BACKEND"
        android:textOff="@string/esp"
        android:textOn="@string/ita" />

</LinearLayout>