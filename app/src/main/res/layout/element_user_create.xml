<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="650dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/create_user_avatar_preview_box"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="30dp"/>

        <RelativeLayout
            android:id="@+id/create_user_avatar_clickable_box"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_marginEnd="30dp"
            android:focusable="true"
            android:clickable="true"
            android:alpha="0.6"
            android:background="@drawable/focus_image" />

        <EditText
            android:id="@+id/create_user_name_input_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/create_user_avatar_preview_box"
            android:background="@drawable/text_box_background"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:hint="@string/hint_create_user_name"
            android:textColorHint="@color/grey_light_darker"
            android:textCursorDrawable="@drawable/text_cursor_color" />

        <EditText
            android:id="@+id/create_user_surname_input_box"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/create_user_avatar_preview_box"
            android:layout_below="@id/create_user_name_input_box"
            android:background="@drawable/text_box_background"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:hint="@string/hint_create_user_surname"
            android:textColorHint="@color/grey_light_darker"
            android:textCursorDrawable="@drawable/text_cursor_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:background="@color/colorTextSplash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="@string/create_user_sections_divider"
            android:textAlignment="center"
            android:textColor="@color/colorTextSplash"
            android:textSize="25sp" />

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="1dp"
            android:background="@color/colorTextSplash" />
    </LinearLayout>

    <EditText
        android:id="@+id/create_user_nickname_input_box"
        android:layout_width="650dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_box_background"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:hint="@string/hint_create_user_nickname"
        android:textColorHint="@color/grey_light_darker"
        android:textCursorDrawable="@drawable/text_cursor_color" />

    <EditText
        android:id="@+id/create_user_password_input_box"
        android:layout_width="650dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_box_background"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:hint="@string/hint_create_user_password"
        android:textColorHint="@color/grey_light_darker"
        android:textCursorDrawable="@drawable/text_cursor_color" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/create_user_affirmative_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_buttons_background"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/accept_button"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/create_user_dismiss_layout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_buttons_background"
            android:clickable="true"
            android:focusable="true"
            android:padding="2dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/cancel_button"
                android:textColor="@color/white"
                android:textSize="27sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>