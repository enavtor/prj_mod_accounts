<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">

        <shape android:shape="rectangle">

            <solid android:color="@color/white_less_transparent" />

            <stroke android:width="@dimen/dpi_3dp"
                android:color="@color/focus_medium" />

            <corners android:radius="@dimen/dpi_2dp" />

        </shape>
    </item>

    <item android:state_focused="false">

        <shape android:padding="@dimen/dpi_15dp"
            android:shape="rectangle">

            <solid android:color="@color/white_more_transparent" />

            <stroke android:width="@dimen/dpi_2dp"
                android:color="@color/grey_light_darker" />

            <corners android:radius="@dimen/dpi_2dp" />

        </shape>
    </item>
</selector>